              <h6 class="card-subtitle mb-2 text-muted">{{this.dataValues.cost}}</h6>
            </div>
            <div class="card-footer">
              <button class="btn btn-primary" type="submit" onclick="add_to_cart(this)">Add Item</button>
            </div>
          </div>
        <!-- </div> -->
        {{/each}}
        </div>
      </div>

      <div class="col-sm-4">
        <div class="mt-2 ml-1"><h5>Recommendations</h5></div>
        <div class="card-columns">
          {{#each recommends}}
          <div class="card h-100 text-center" id="{{id}}">
            <div class="card-body">
              <h4 class="card-title">{{name}}</h4>
              <h6 class="card-subtitle mb-2 text-muted">{{cost}}</h6>
            </div>
            <div class="card-footer">
              <button class="btn btn-primary" type="submit" onclick="add_to_cart(this)">Add Item</button>
            </div>
          </div>
          {{/each}}
        </div>
        
      </div>
    </div>
  </div>
  <!-- /.container -->

<script>
  function add_to_cart(element) {
    row = element.parentNode.parentNode
    item_id = row.id
    cust_id = {{user.id}}
    const data = {item_id, cust_id};
    const options = {
        method: 'POST',
        headers: {
            'Content-Type': 'application/json'
        },
        body: JSON.stringify(data)
    };
    fetch('/add', options);
    return false
  }

</script>